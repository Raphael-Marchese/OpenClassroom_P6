{% extends 'layout.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}
    <header class="bg-white position-relative d-flex align-items-center justify-content-center"
            style="background-image: url('{{ asset('assets/websiteUtils/homepage_picture.jpg') }}'); background-size: contain; background-position: center; background-repeat: no-repeat; height: 40vh;">
        <div class="container text-center position-relative" style="z-index: 1;">
            <div class="overlay-text position-relative d-inline-block px-4 py-3">
                <h1 class="display-5 fw-bold text-dark mb-2">Snowtrick</h1>
                <p class="lead text-grey mb-4">Contribue toi aussi à notre bibliothèque participative!</p>
            </div>
        </div>
    </header>

    <section class="py-5">
        <div class="container">
            <div class="">
                {% for figure in figures %}
                    <div class="col-lg-4  ">
                        <div class="card shadow border-0" style="width: 18rem;">
                            {% if figure.illustrations %}

                                <img class="card-img-top"
                                     src="../../../public/assets/images/{{ figure.illustrations|first }}"
                                     alt="Photo illustration article"/>
                            {% else %}
                                <img class="card-img-top" src="{{ asset('assets/images/indy.webp') }}"
                                     alt="Photo illustration article"
                                     style="width: 286px; height: 180px; object-fit: cover;"/>
                            {% endif %}
                            <div class="card-body p-4">
                                <a class="text-decoration-none link-dark stretched-link"
                                   href="{{ '/figure/' ~ figure.id }}"><h5
                                            class="card-title mb-3">{{ figure.name }}</h5></a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
